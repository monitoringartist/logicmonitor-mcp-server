{
    "name": "logicmonitor-mcp-server",
    "version": "1.0.0",
    "description": "LogicMonitor Model Context Protocol Server",
    "type": "module",
    "main": "build/servers/stdio-server.js",
    "bin": {
        "logicmonitor-mcp-server": "build/servers/stdio-server.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "start": "node build/servers/stdio-server.js",
        "start:http": "node build/servers/http-server.js",
        "start:multi": "node build/servers/multi-transport-server.js",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
        "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
        "inspect": "npm run build && npx @modelcontextprotocol/inspector node build/servers/multi-transport-server.js",
        "lint": "eslint src/**/*.ts"
    },
    "keywords": [
        "mcp",
        "model-context-protocol"
    ],
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.4",
        "@types/jsonwebtoken": "^9.0.10",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "jsonwebtoken": "^9.0.2",
        "passport": "^0.7.0",
        "passport-github2": "^0.1.12",
        "passport-oauth2": "^1.8.0",
        "winston": "^3.18.3"
    },
    "devDependencies": {
        "@jest/globals": "^30.2.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-session": "^1.17.10",
        "@types/jest": "^30.0.0",
        "@types/node": "^22.18.13",
        "@types/passport": "^1.0.16",
        "@types/passport-github2": "^1.2.9",
        "@types/passport-oauth2": "^1.4.17",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "eslint": "^9.0.0",
        "jest": "^30.2.0",
        "ts-jest": "^29.4.5",
        "typescript": "^5.6.3"
    },
    "engines": {
        "node": ">=18"
    },
    "overrides": {
        "glob": "^10.4.5",
        "inflight": "npm:@aashutoshrathi/safe-inflight@^1.0.2"
    }
}
